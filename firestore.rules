rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }

    // Users Collection
    match /users/{userId} {
      allow read: if isAuthenticated();
      allow write: if isAuthenticated() && request.auth.uid == userId;
    }

    // Tasks Collection
    match /tasks/{taskId} {
      allow read: if isAuthenticated();
      
      allow create: if isAuthenticated();
      
      // Update Rules
      allow update: if isAuthenticated() && (
        // Allow general updates (claiming etc) if NOT setting to finished
        (request.resource.data.status != 'finished') ||
        
        // STRICT RULE: Only assignee can set status to 'finished'
        (request.resource.data.status == 'finished' && 
          (resource.data.assignedTo == request.auth.uid || request.resource.data.assignedTo == request.auth.uid)
        )
      );
      
      allow delete: if isAuthenticated(); 
    }

    // Attendance Logs
    match /attendance_logs/{logId} {
      // Phase 4: Readable by all authenticated users for visibility
      allow read: if isAuthenticated(); 
      allow create: if isAuthenticated();
      allow update, delete: if isAuthenticated() && (request.auth.uid == resource.data.userId);
    }

    // Image Store
    match /image_store/{imageId} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated();
      allow delete: if isAuthenticated();
    }
  }
}
